                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_20sdp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="NGO Type"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center_vertical|right"
                                android:paddingRight="20dp"/>
                            <EditText
                                android:id="@+id/etNGOType"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"/>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent"></FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_20sdp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Username"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center_vertical|right"
                                android:paddingRight="20dp"/>
                            <EditText
                                android:id="@+id/etNGOUserName"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"/>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent"></FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_20sdp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Password"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center_vertical|right"
                                android:paddingRight="20dp"/>
                            <EditText
                                android:id="@+id/etNGOPassword"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:inputType="textPassword"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"/>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent"></FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_20sdp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="ConfirmPass"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center_vertical|right"
                                android:paddingRight="20dp"/>
                            <EditText
                                android:id="@+id/etNGOConfirmPassword"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:inputType="textPassword"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"/>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent"></FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_20sdp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Email"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center_vertical|right"
                                android:paddingRight="20dp"/>
                            <EditText
                                android:id="@+id/etNGOEmail"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"/>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent"></FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_20sdp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Contact"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center_vertical|right"
                                android:paddingRight="20dp"/>
                            <EditText
                                android:id="@+id/etNGOContact"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_12sdp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical|left"/>
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent"></FrameLayout>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnNGORegister"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:text="Register"
                            android:textSize="@dimen/_12sdp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </FrameLayout>
            </ScrollView>
        </LinearLayout>
    </TabHost>
</LinearLayout>
